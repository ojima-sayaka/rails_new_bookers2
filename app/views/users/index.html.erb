<div class="row">
   <div class="col-md-3">
     <%= render 'books/book',book: @book, user: current_user %>
   </div>
   <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
         <thead>
            <tr>
               <th>image</th>
               <th>name</th>
               <th colspan></th>
            </tr>
         </thead>
         <tbody>
         <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>

        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>

     </tr>
      <% end %>
      </table>
   </div>
</div>