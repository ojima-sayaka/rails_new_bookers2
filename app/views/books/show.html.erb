<div class="row">
  <div class="col-md-3">
    <%= render 'books/book',book: @newbook, user: @user %>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path do %>
              <%= image_tag @user.get_profile_image(50,50) %>
              <br><%= @user.name %></br>
            <% end %>
          </td>
          <td><%= @book.title %>
          </td>
          <td><%= @book.body %></td>
        </tr>
      </tbody>

    </table>
  </div>
</div>








